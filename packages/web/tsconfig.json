{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": ["dom", "dom.iterable", "esnext"],
        "isolatedModules": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "functions"]
}
