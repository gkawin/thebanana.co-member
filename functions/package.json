{
    "name": "functions",
    "scripts": {
        "lint": "eslint --ext .ts .",
        "clean": "rm -rf lib",
        "build": "yarn clean && tsc && cp -r src/html lib/functions/src/html",
        "serve": "yarn build && firebase emulators:start",
        "shell": "yarn build && firebase functions:shell",
        "start": "yarn shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "build:watch": "concurrently --kill-others \"tsc -w\"",
        "serve:watch": "npm run build:watch | firebase emulators:start --import ../export --only functions,storage,firestore"
    },
    "engines": {
        "node": "16"
    },
    "main": "lib/functions/src/index.js",
    "dependencies": {
        "dayjs": "^1.11.3",
        "firebase-admin": "^9.8.0",
        "firebase-functions": "^3.22.0",
        "form-data": "^4.0.0",
        "handlebars": "^4.7.7",
        "puppeteer": "^14.2.1"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.8.0",
        "concurrently": "^7.2.1",
        "eslint": "^7.6.0",
        "eslint-config-google": "^0.14.0",
        "eslint-plugin-import": "^2.22.0",
        "firebase-functions-test": "^0.2.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.7.3"
    },
    "private": true
}
